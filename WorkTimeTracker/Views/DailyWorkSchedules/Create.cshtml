@model WorkTimeTracker.Models.Dtos.DailyWorkScheduleDto

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DailyWorkSchedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="EmployeeId" value="@string.Concat(Model?.Employee?.FirstName ?? "", ' ', Model?.Employee?.LastName ?? "")" class="form-control" disabled/>
            <input asp-for="Date" value="@Model?.Date.ToString("dd-MM-yyyy")" class="form-control" disabled />

            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-control" value="@Model.EmployeeId" />
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" value="@Model.Date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PlannedWorkStart" class="control-label"></label>
                <input asp-for="PlannedWorkStart" class="form-control" />
                <span asp-validation-for="PlannedWorkStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlannedWorkEnd" class="control-label"></label>
                <input asp-for="PlannedWorkEnd" class="form-control" />
                <span asp-validation-for="PlannedWorkEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
