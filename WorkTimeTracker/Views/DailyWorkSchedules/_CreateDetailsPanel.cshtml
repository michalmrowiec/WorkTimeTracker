@model WorkTimeTracker.Models.Dtos.DailyWorkScheduleDto

@{
    string modalId = string.Concat("createDailyModal-", Model.Date.ToString("dd-MM-yyyy"), '-', Model.EmployeeId);
}

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#@modalId">
    mm
</button>

<!-- Modal -->
<div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="createCarWorkshopServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Create">

                <div class="modal-header">
                    <h5 class="modal-title" id="createCarWorkshopServiceModalLabel">Create new carworkshop service</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="EmployeeId" class="form-control" type="hidden" />

                    <div class="form-group">
                        <label asp-for="PlannedWorkStart" class="control-label"></label>
                        <input asp-for="PlannedWorkStart" class="form-control" />
                        <span asp-validation-for="PlannedWorkStart" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlannedWorkEnd" class="control-label"></label>
                        <input asp-for="PlannedWorkEnd" class="form-control" />
                        <span asp-validation-for="PlannedWorkEnd" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <input type="submit" value="Create" class="btn btn-primary">
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}